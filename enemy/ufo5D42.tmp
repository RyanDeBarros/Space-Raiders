var tree: SceneTree
var player: Player

var speed_dict: Dictionary
var move_interval_dict: Dictionary
var speed: int
var move_interval: float
var move_interval_timer: Timer


func _init(ufo_enemy: Enemy, scene_tree: SceneTree, json_file_name: String) -> void:
	ufo = ufo_enemy
	tree = scene_tree
	player = tree.get_first_node_in_group(\"player\")
	move_interval_timer = ufo.get_node(\"MoveIntervalTimer\")
	setup(json_file_name)
	restart_move_interval()


func _process(delta: float) -> void:
	var direction := ufo.position.direction_to(player.position)
	ufo.position += direction * delta * speed


func setup(json_file_name: String) -> void:
	var file := FileAccess.open(json_file_name, FileAccess.READ)
	var json = JSON.parse_string(file.get_as_text())
	speed_dict = json[\"speed\"]
	move_interval_dict = json[\"move_interval\"]
	file.close()


func restart_move_interval() -> void:
	speed = Math.rand_mediani(speed_dict[\"min\"], speed_dict[\"median\"], speed_dict[\"max\"])
	move_interval = Math.rand_medianf(
			move_interval_dict[\"min\"], move_interval_dict[\"median\"], move_interval_dict[\"max\"])
"

